{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist",
    "lib": ["es6", "dom", "dom.iterable", "esnext", "esnext.asynciterable"],
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true
  },
  "include": ["src"]
}
